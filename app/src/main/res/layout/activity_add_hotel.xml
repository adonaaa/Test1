<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addHotel">


    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="29dp"
        android:text="      add hotel"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etDescriptionAddHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNameAdd"
        android:layout_width="198dp"
        android:layout_height="39dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="hotel name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etPhoneAddHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAddressAddHotel"
        android:layout_width="204dp"
        android:layout_height="46dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Adress"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etFloorAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etFloorAdd"
        android:layout_width="205dp"
        android:layout_height="42dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="floors number"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/spCategoryAddHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="28dp"
        android:background="#03A9F4"
        android:backgroundTint="#03A9F4"
        android:onClick="add"
        android:text="add hotel"
        android:textColorHint="@color/black"
        app:iconTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCoverAdd"
        android:layout_width="91dp"
        android:layout_height="49dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addingphoto"
        android:onClick="selectPhoto"

        />

    <Spinner
        android:id="@+id/spCategoryAddHotel"
        android:layout_width="191dp"
        android:layout_height="59dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="13dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/ivCoverAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/etPhoneAddHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="phone..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/etAddressAddHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDescriptionAddHotel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"

        android:hint="@string/Hotel_description"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/etNameAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>